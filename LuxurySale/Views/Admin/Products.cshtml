@using LuxurySale.Utilities;
@model IEnumerable<LuxurySale.Models.Product>;
<div class="container">
    <div class="parfumes-admin-wrapper">
        <h2 class="text-center display_font_regular main_text">Perfume List</h2>

        <div class="mb-2 text-right">
            <a asp-controller="Admin" asp-action="ProductUpset" class="btn btn-primary"><i class="fas fa-plus"></i> Create Product</a>
        </div>
        @if (Model.Any())
        {
            <ul class="container products_container">
                @foreach (Product product in Model)
                {
                    <li class="parfume-item">
                        @if (product.Image == null)
                        {
                            <img style="width: 100%; height:200px;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/2048px-No_image_available.svg.png" />
                        }
                        else
                        {
                            <img style="width: 100%; height:200px;" src='@Constants.productImagesPath@product.Image' />
                        }
                        <div class="card-body ">
                            <h2>@product.Name </h2>
                            <p>@product?.Category.Name</p>
                            <p>@product?.Description</p>
                            <h3>@product.Price<span>$</span></h3>

                            <div class="btn-group">
                                <a asp-controller="Admin" asp-action="ProductUpset" asp-route-id="@product.Id" class="btn btn-secondary"><i class="fas fa-edit"></i> Edit</a>

                                <a asp-controller="Admin" asp-action="ProductDelete" asp-route-id="@product.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                            </div>
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>List is empty!</p>
        }
    </div>
</div>