@model LuxurySale.Models.Category;
@{
    var title = "Create a New Category";
}
<div>
    <form method="post" asp-action="CategoryUpset" enctype="multipart/form-data">
        @if (Model != null)
        {
            <input asp-for="Id" hidden>
            title = "Update Category";
        }

        <h2 class="mb-3">@title</h2>

        <div class="form-group row">
            <label asp-for="Name" class="col-4"></label>
            <input asp-for="Name" class="form-control col-8">
            <span asp-validation-for="Name" class="offset-4 text-danger"></span>
        </div>
        
        
        <div class="form-group row">
            <div class="col-6">
                <input type="submit" id="subm" class="btn btn-success w-100" />
            </div>

            <div class="col-6">
                <a asp-action="Index" class="btn btn-dark w-100">Back</a>
            </div>
        </div>
    </form>
</div>

@* Client Validation *@

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}