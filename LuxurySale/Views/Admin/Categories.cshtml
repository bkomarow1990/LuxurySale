@model IEnumerable<LuxurySale.Models.Category>

<div>
    <div class="mb-2 text-right">
        <a asp-controller="Admin" asp-action="CategoryUpset" class="btn btn-primary"><i class="fas fa-plus"></i> Add Category</a>
    </div>

    @if (Model.Any())
    {
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category category in Model)
                {
                    <tr>
                        <td>
                            @category.Id
                        </td>
                        <td>@category.Name</td>
                        <td>
                            <div class="btn-group">
                                <a asp-controller="Admin" asp-action="CategoryUpset" asp-route-id="@category.Id" class="btn btn-secondary"><i class="fas fa-edit"></i> Edit</a>

                                <a asp-controller="Admin" asp-action="CategoryDelete" asp-route-id="@category.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

